{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Arkham SCE: Build",
      "type": "shell",
      "command": "TTSModManager",
      "args": [
        "-moddir=${workspaceFolder}",
        "-modfile=${env:HOME}/Downloads/SCEDbuild/codelab.json"
      ],
      "options": {
        // "cwd": "C:\\git\\TTSModManager"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Arkham SCE: Decompose",
      "type": "shell",
      "command": "TTSModManager",
      "args": [
        "-moddir=${workspaceFolder}",
        "-modfile=${env:HOME}/Downloads/codelab.json",
        "-reverse"
      ],
      "options": {
        // "cwd": "C:\\git\\TTSModManager"
      },
      "problemMatcher": []
    }
  ]
}
